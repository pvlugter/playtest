#! /bin/bash

# Copyright (C) 2009-2013 Typesafe Inc. <http://www.typesafe.com>

unset no_publish

# process arguments
declare -a args
while [[ $# -gt 0 ]] ; do
  case "$1" in
    --no-publish) no_publish=1; shift ;;
    *) args=("${args[@]}" "$1"); shift ;;
  esac
done
set -- "${args[@]}" # reset "$@"

echo "[info]"
echo "[info] ---- PLAYFRAMEWORK CORE TEST RUNNER"
echo "[info]"

set -e
export CURRENT=`pwd`
export SCRIPT=`dirname "$0"`

cd "$SCRIPT"
export PLAY=`pwd`/../play

if [ -n "$no_publish" ] ; then
  echo "[info] Not publishing locally"
else
  ./build "$@" publish-local
fi

./build "$@" test

echo "[info]"
echo "[info] ---- SBT PLUGIN TESTS"
echo "[info]"

./build "$@" Sbt-Plugin:scripted

rm -rf ./logs

cd ./test/integrationtest

echo "[info]"
echo "[info] ---- RUNNING INTEGRATION TEST"
echo "[info]"

$PLAY "$@" clean test

cd $CURRENT

cd ./test/integrationtest-java

echo "[info]"
echo "[info] ---- RUNNING JAVA INTEGRATION TEST"
echo "[info]"

$PLAY "$@" clean test
if [ ! -f target/junit-running ]
then
  echo "[Error]"
  echo "[Error] ---- Junit tests might not be running"
  echo "[Error]"
  exit 1
fi


cd $CURRENT

cd ./test/integrationtest-scala

echo "[info]"
echo "[info] ---- RUNNING SCALA INTEGRATION TEST"
echo "[info]"

$PLAY "$@" clean test
cd $CURRENT

echo "[info]"
echo "[info] ---- RUNNING DOCUMENTATION TESTS"
echo "[info]"

cd ../documentation
$PLAY "$@" clean test validate-docs
cd $CURRENT

echo "[info]"
echo "[info] ---- TESTING SAMPLE APPLICATIONS"
echo "[info]"

x=`find ../samples -name app`
for i in $(echo $x | tr ";" "\n")
do
  echo "[info]"
  echo "[info] ---- TESTING ${i/app/}"
  echo "[info]"
  cd ${i/app/}
  $PLAY "$@" clean test
  cd $CURRENT
done

echo "[info]"
echo "[info] ALL TESTS PASSED"
echo "[info]"

